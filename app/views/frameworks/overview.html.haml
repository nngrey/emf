.container

  %h3 Framework

  - if @evaluative_questions.any?
    .panel
      .panel-body
        - @evaluative_questions.each do |question|
          %h4= "Evaluative question - #{ question.category.capitalize }"
          %dl.dl-horizontal
            %dt Description
            %dd= question.description
            %br
            - question.sub_questions.each do |sub_question|
              %dt Sub-question description
              %dd= sub_question.description
              %dt Monitoring information
              %dd= sub_question.monitoring_information
              %br
              - sub_question.performance_indicators.each do |performance_indicator|
                %dt Perfomance indicator description
                %dd= performance_indicator.description
                %dt Perfomance indicator definition
                %dd= performance_indicator.definition
                %dt Numerator label
                %dd= performance_indicator.numerator_label
                %dt Denominator label
                %dd= performance_indicator.denominator_label
                %br
    - if @evaluative_questions.any?
      %p Alternative data presentation; TODO: this is not responsive, grid or media queries?
      %hr
      %table
        %thead
          %tr
            %th{:style => "width: 15%;"} Description
            %th{:style => "width: 15%;"} Sub-questions
            %th{:style => "width: 15%;"} Monitoring info
            %th{:style => "width: 15%;"} Performance indicators
            %th{:style => "width: 10%;"} Definition
            %th{:style => "width: 10%;"} Numerator
            %th{:style => "width: 10%;"} Denominator
        - @evaluative_questions.each do |question|
          %h4= "Evaluative question - #{ question.category.capitalize }"
          %tbody
            %tr
              %td
                = question.description
              - question.sub_questions.each do |sub_question|
                %tr
                  %td
                  %td= sub_question.description
                  %td= sub_question.monitoring_information
                - sub_question.performance_indicators.each do |performance_indicator|
                  %tr
                  %td
                    %td
                    %td
                    %td= performance_indicator.description
                    %td= performance_indicator.definition
                    %td= performance_indicator.numerator_label
                    %td= performance_indicator.denominator_label
  - else
    %p This is where the framework will appear after it has been built.