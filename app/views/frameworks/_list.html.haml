.panel
  .panel-body
    - @evaluative_questions.each do |question|
      %h4= "Evaluative question - #{ question.category.capitalize }"
      %dl.dl-horizontal
        %dt Description
        %dd= question.description
        %br
        - question.performance_indicators.each do |performance_indicator|
          %dt Perfomance indicator description
          %dd= performance_indicator.description
      .dropdown
        %button#dropdownMenu1.btn.btn-default.btn-sm.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          Dropdown
          %span.caret
        %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
          %li
            %a{:href => edit_evaluative_question_path(question)} Edit evaluative question
          %li
            %a{:href => new_evaluative_question_path} Add evaluative question
          - if @framework.evaluative_questions.find_by(category: "effectiveness").performance_indicators.any?
            %li
              %a{:href => new_framework_survey_template_path(@framework)} Create a survey template
