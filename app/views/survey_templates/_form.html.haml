#survey-questions
  = semantic_form_for [@framework, @survey_template] do |f|
    = f.input :name, label: "Survey title"
    = f.semantic_fields_for :data_questions do |data_question|
      = render 'data_question_fields', f: data_question
    .links
      %p= link_to_add_association "<button, class='btn btn-success'>Add another question</button>".html_safe, f, :data_questions
    .pull-right= f.action :submit, label: 'Save and continue', :button_html => { :class => 'btn btn-success' }