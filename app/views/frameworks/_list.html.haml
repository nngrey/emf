.panel
  .panel-body
    - @evaluative_questions.each do |question|
      %h4= "Evaluative question - #{ question.category.capitalize }"
      %dl.dl-horizontal
        %dt Description
        %dd= question.description
        %br
        - question.performance_indicators.each do |performance_indicator|
          %dt Perfomance indicator description
          %dd= performance_indicator.description
          %dt Perfomance indicator definition
          %dd= performance_indicator.definition
      = link_to "Edit", edit_evaluative_question_path(question), :class => "btn btn-default"
      %hr