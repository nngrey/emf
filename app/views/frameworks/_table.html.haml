- @evaluative_questions.each do |question|
  .table-responsive
    %table.table.table-bordered.table-hover
      %thead
        %tr
          %th{:colspan => "2"}
            %h4= question.category.capitalize
        %tr
          %th Description
          %th Performance indicators
        %tbody
          %tr
            %td
              = question.description
            %td
              = question.performance_indicators.first.description
            %tr
              - question.performance_indicators.each_with_index do |performance_indicator, index|
                - if index > 0
                  %td
                  %td= performance_indicator.description
