.nested-fields
  = f.inputs do
    = f.label "Sub-question: #{ f.object.description }"
    = f.semantic_fields_for :performance_indicators do |performance_indicator|
      = render 'performance_indicator_fields', f: performance_indicator
    .links
      %p= link_to_add_association "<button, class='btn btn-default'>Add performance indicator</button>".html_safe, f, :performance_indicators
