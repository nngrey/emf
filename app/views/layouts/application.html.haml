!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Emf
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} EMF
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => performance_indicators_dashboard_path} Dashboard
            - if Framework.count > 0
              %li
                %a{:href => frameworks_path} View frameworks
            %li
              %a{:href => new_framework_path} Create framework
            - if Framework.count > 0
              %li
                %a{:href => new_evaluative_question_path} Add evaluative question
            - if PerformanceIndicator.count > 0
              %li
                %a{:href => new_survey_template_path} Create Survey
            - if PerformanceIndicator.count > 0
              %li
                %a{:href => performance_indicators_path} Data entry
    = yield
