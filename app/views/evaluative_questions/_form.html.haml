= semantic_form_for [@framework, @evaluative_question] do |f|
  %h3= "Evaluative question: #{@category}"
  = f.input :category, :as => :hidden, :input_html => {:value => @category}
  = f.input :description, label: "Description", :input_html => { :rows => 3 }
  = f.semantic_fields_for :performance_indicators do |performance_indicator|
    = render 'performance_indicator_fields', f: performance_indicator
  .links
    %p= link_to_add_association "<button, class='btn btn-success'>Add another performance indicator</button>".html_safe, f, :performance_indicators
  .pull-right{:style => "margin-left: 3px"}
    = f.action :submit, label: @button_text, :button_html => { :class => 'btn btn-success' }